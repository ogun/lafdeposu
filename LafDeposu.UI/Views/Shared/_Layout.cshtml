<!DOCTYPE html>
<html lang="tr" ng-app="findWordsApp">
<head>
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <link rel="shortcut icon" href="/content/img/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/sbundles/bootstrap")
    @RenderSection("styles", required: false)
    @RenderSection("scriptsHead", required: false)
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <style type="text/css">
        @@media (min-width: 1200px) { .container { max-width: 970px !important; } }
        @@media (min-width: 1400px) { .container { max-width: 1170px !important; } }
    </style>
</head>

<body>

    <div class="container">
        @if (!Request.Browser.IsMobileDevice) {
            <div class="gads ads-header-desktop-container">
                <div class="gads ads-header-desktop-left">
                    <!-- Laf Deposu Left -->
                    <ins class="adsbygoogle"
                         style="display:inline-block;width:160px;height:600px"
                         data-ad-client="ca-pub-1807059015128635"
                         data-ad-slot="5051178032"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
                <div class="gads ads-header-desktop-right">
                    <!-- Laf Deposu Right -->
                    <ins class="adsbygoogle"
                         style="display:inline-block;width:160px;height:600px"
                         data-ad-client="ca-pub-1807059015128635"
                         data-ad-slot="8004644433"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            </div>
        }
        <nav class="navbar navbar-default" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Laf Deposu</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Kelime-Ekle/"><span class="glyphicon glyphicon-pencil"></span> Kelime Ekle</a></li>
                    <li><a href="https://play.google.com/store/apps/details?id=com.appchain.kelimatik"><span class="glyphicon glyphicon-phone"></span> Android</a></li>
                    <li><a href="/Yardim/">Yardım</a></li>
                    <li><a href="/Iletisim/">İletişim</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div class="gads ads-header">
            @if (Request.Browser.IsMobileDevice) {
                <!-- Laf Deposu Üst Responsive -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-1807059015128635"
                     data-ad-slot="9298724435"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            } else {
                <div class="gads ads-header-desktop-top">
                    <!-- Laf Deposu Top -->
                    <ins class="adsbygoogle"
                         style="display:inline-block;width:728px;height:90px"
                         data-ad-client="ca-pub-1807059015128635"
                         data-ad-slot="2235482435"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            }
        </div>

        @RenderBody()

        @Html.Action("Rss", "Home")
        
        @if (Request.Browser.IsMobileDevice) {
            <div class="gads ads-footer">
                <!-- Laf Deposu Footer Responsive -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-1807059015128635"
                     data-ad-slot="6673159233"
                     data-ad-format="auto"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
                <!-- /Laf Deposu Footer Responsive -->
            </div>
        }
    </div>
    <!-- /container -->
    <!-- JavaScript
    ================================================== -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/analytics")
    @Scripts.Render("~/bundles/userreport")
    @RenderSection("scriptsBottom", required: false)
    <!-- Placed at the end of the document so the pages load faster -->
</body>
</html>